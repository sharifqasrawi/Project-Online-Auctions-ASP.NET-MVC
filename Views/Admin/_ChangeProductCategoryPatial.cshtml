@model OnlineAuctionProject.Models.Auction

@using OnlineAuctionProject.Resources

<div class="modal fade" id="ChangeCategoryModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title" style="color:white;">
                    <span class="glyphicon glyphicon-eur"></span>
                    @Resource.ChangeCategory
                </h4>
            </div>
           
            @using (Html.BeginForm("ChangeProductCategory", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div>
                        <img src="~/Images/system-settings-icon-47595.png" class="ClockImg img-responsive hidden-xs" alt="@Resource.Image" />
                    </div>
                    <br /><br />
                    @Html.LabelFor(model => model.Product.Category.Category_Name, new { @class = "lable form-inline" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-folder-open"></i></span>
                        @Html.DropDownList("Category", null, null, new { @class = "form-control dropDownList" })
                    </div>
                    <br /><br />

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">@Resource.Cancel</button>
                    <input type="submit" class="btn btn-success" value="@Resource.Save" />
                </div>
            }
        </div>

    </div>
</div>



