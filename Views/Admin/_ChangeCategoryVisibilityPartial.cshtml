@model OnlineAuctionProject.Models.Category
@using OnlineAuctionProject.Resources

@if (Model.Visible)
{
     @Ajax.RawActionLink(string.Format("<span class = \"glyphicon glyphicon-eye-open\"></span> "+Resource.Visible), "ChangeCategoryVisibility", "admin", new { Id = Model.Id },
                                new AjaxOptions { HttpMethod = "GET", 
                                                  UpdateTargetId = "divCategoryVisibilityStatus_" + Model.Id,
                                                  LoadingElementId = "DivWaiting",
                                                  InsertionMode = InsertionMode.Replace },
                            new { @class="btn btn-success", title = Resource.Hide } )
    
   
}
else
{
         @Ajax.RawActionLink(string.Format("<span class = \"glyphicon glyphicon-eye-close\"></span> " + Resource.Hidden), "ChangeCategoryVisibility", "admin", new { Id = Model.Id },
                            new AjaxOptions { HttpMethod = "GET", 
                                              UpdateTargetId = "divCategoryVisibilityStatus_" + Model.Id,
                                              LoadingElementId = "DivWaiting",
                                              InsertionMode = InsertionMode.Replace },
                            new { @class = "btn btn-danger", title = Resource.Show })

}