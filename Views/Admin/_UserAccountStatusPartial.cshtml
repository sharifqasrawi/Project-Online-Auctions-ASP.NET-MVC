@model OnlineAuctionProject.Models.ApplicationUser
@using OnlineAuctionProject.Resources

@{
    if (Model.Active)
    {
        @Ajax.ActionLink(Resource.Active, "BlockUnblockUser", "admin", new { Id = Model.Id },
                            new AjaxOptions { HttpMethod = "GET",
                                              UpdateTargetId = "divUserStatus_"+Model.Id,
                                              LoadingElementId = "DivWaiting",
                                              InsertionMode = InsertionMode.Replace,},
                            new { @class="btn btn-success", title = Resource.Block, id="BtnActive" } )
        
    }
    else
    {
          @Ajax.ActionLink(Resource.Blocked, "BlockUnblockUser", "admin", new { Id = Model.Id },
                                  new AjaxOptions { HttpMethod = "GET",
                                                    UpdateTargetId = "divUserStatus_"+Model.Id,
                                                    LoadingElementId = "DivWaiting",
                                                    InsertionMode = InsertionMode.Replace },
                                  new { @class = "btn btn-danger", title = Resource.Unblock, id = "BtnBlocked" })
    }
}
