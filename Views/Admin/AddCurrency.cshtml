@model OnlineAuctionProject.Models.Currency
@using OnlineAuctionProject.Resources

@{
    ViewBag.Title = Resource.AddCurrency;
}

<h3>
    <span class="glyphicon glyphicon-plus"></span>
    @Resource.AddCurrency
</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="Box">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <p>
                        <span class="glyphicon glyphicon-usd"> </span>
                        @Resource.AddCurrencyInfo
                    </p>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = Resource.AddCurrencyPlaceHolder })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="@Resource.Add" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="alert-danger">
                        <p>
                            @ViewBag.ErrorAddingCurrency
                        </p>
                    </div>

                    @Html.ValidationSummary(true)

                </div>
            </div>
        </div>
        <br />
        <a href="@Url.Action("Currencies", "Admin")" class="btn btn-default">
            <span class="@Resource.BackToAdminPageGlyph"> </span>
        </a>
    </div>
}
