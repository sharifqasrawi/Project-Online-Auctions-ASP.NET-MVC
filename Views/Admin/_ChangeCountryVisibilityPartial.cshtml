@model OnlineAuctionProject.Models.Country

@using OnlineAuctionProject.Resources

@if (Model.Visible)
{
    @Ajax.RawActionLink(string.Format("<span class = \"glyphicon glyphicon-eye-open\"></span> " + Resource.Visible),
                           "ChangeCountryVisibility", "admin", new { Id = Model.Id },
                                    new AjaxOptions { HttpMethod = "GET", 
                                                      UpdateTargetId = "divCountryVisibilityStatus_" + Model.Id,
                                                      LoadingElementId = "DivWaiting",
                                                      InsertionMode = InsertionMode.Replace },
                            new { @class = "btn btn-success", title = Resource.Hide })


}
else
{
    @Ajax.RawActionLink(string.Format("<span class = \"glyphicon glyphicon-eye-close\"></span> " + Resource.Hidden),
                           "ChangeCountryVisibility", "admin", new { Id = Model.Id },
                                new AjaxOptions { HttpMethod = "GET", 
                                                  UpdateTargetId = "divCountryVisibilityStatus_" + Model.Id,
                                                  LoadingElementId = "DivWaiting",
                                                  InsertionMode = InsertionMode.Replace },
                            new { @class = "btn btn-danger", title = Resource.Show })

}