@model OnlineAuctionProject.Models.LoginViewModel
@using OnlineAuctionProject.Resources
@{
    ViewBag.Title = Resource.Login;
}

<h3>
    <span class="glyphicon glyphicon-exclamation-sign"></span>
    @Resource.BadAccessMsg
</h3>
<hr />
<div class="Box">
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login2", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4 class="text-danger">
                        <span class="glyphicon glyphicon-log-in"></span>
                        @Resource.Login
                    </h4>
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = Resource.UsernamePlaceHolder })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Resource.PasswordPlaceHolder })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value=@Resource.Login class="btn btn-default" />
                        </div>
                    </div>
                    @Html.ValidationSummary(true)
                }
            </section>
        </div>
        <div class="col-lg-4">
            <img src="~/Images/user-login-icon-29.png" class="img-responsive hidden-xs" alt="@Resource.Login (@Resource.Image)" />
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}