@model OnlineAuctionProject.Models.EditProfileModel
@using OnlineAuctionProject.Resources
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = Resource.EditProfile;
}

<h3>
    <span class="glyphicon glyphicon-pencil"> </span>
    @ViewBag.Title
</h3>
<hr />

@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="Box">
        <div class="row">
            <div class="col-lg-12">
                <p style="padding:10px;">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    @Resource.EditProfileInfo
                </p>
                <br />

                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = Resource.FirstNamePlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = Resource.LastNamePlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Gender, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <label class="radio-inline">
                            @if(Model.Gender == "Male")
                            { 
                                <input type="radio" name="Gender" value="Male" checked="checked" />
                                @:&nbsp;&nbsp;&nbsp; @Resource.Male
                            }
                            else
                            {
                                <input type="radio" name="Gender" value="Male" />
                                @:&nbsp;&nbsp;&nbsp; @Resource.Male
                            }
                        </label>
                        <label class="radio-inline">
                            @if(Model.Gender == "Female")
                            {
                                <input type="radio" name="Gender" value="Female" checked="checked" />
                                @:&nbsp;&nbsp;&nbsp; @Resource.Female
                            }
                            else
                            {
                                <input type="radio" name="Gender" value="Female" />
                                @:&nbsp;&nbsp;&nbsp; @Resource.Female
                            }
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Resource.EmailPlaceHolder })
                        <p class="text-danger">@ViewBag.EmailUsed</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control phoneNumber", placeholder = Resource.PhNumberPlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Country, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("Country", null, Resource.CountryPlaceHolder, new { @class = "form-control dropDownList" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = Resource.CityPlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Street, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Street, new { @class = "form-control", placeholder = Resource.StreetPlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ZipCode, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", placeholder = Resource.ZipCodePlaceHolder })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AccountNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control", placeholder = Resource.AccountNumberPlaceHolder })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="@Resource.Save" />
                    </div>
                </div>

                @Html.ValidationSummary()
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
