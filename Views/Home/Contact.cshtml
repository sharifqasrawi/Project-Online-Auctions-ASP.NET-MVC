@model OnlineAuctionProject.Models.Message
@using OnlineAuctionProject.Resources
@{
    ViewBag.Title = Resource.Contactus;
}

<h3>
    <span class="glyphicon glyphicon-envelope"> </span>
    @Resource.Contactus
</h3>
<hr />

<div class="Box">
    <div class="row">
        <div class="col-lg-12">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="text-center">
                    <h4 class="text-info">
                        <span class="glyphicon glyphicon-user"> </span>
                        @ViewBag.WelcomeMessage
                    </h4>
                    <hr />
                </div>
                <p class="pargh">
                    <span class="glyphicon glyphicon-comment"> </span>
                    @Resource.UserMessageTextInfo
                </p>
            }
            else
            {
                <p >
                    <span class="glyphicon glyphicon-comment"> </span>
                    @Resource.VisitorMessageTextInfo
                </p>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-9">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Resource.EmailPlaceHolder })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MessageText, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.MessageText, new { @class = "form-control messageTextArea" })
                            @Html.ValidationMessageFor(model => model.MessageText)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-default">
                                @Resource.Send
                                <span class="glyphicon glyphicon-send"></span>
                            </button>
                        </div>
                    </div>

                    @Html.ValidationSummary(true)
                </div>
            }
        </div>
        <div class="col-lg-3">
            <img src="~/Images/email-button-transparent-bkgnd-2.png" class="ContactUsImg img-responsive hidden-xs" alt="@Resource.Image" />
        </div>
    </div>
</div>
